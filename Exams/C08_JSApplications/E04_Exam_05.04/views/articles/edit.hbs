{{> header}}

<!-- Edit -->
<div class="container">

    <form action="#/articles/edit/{{id}}" method="POST">
        <fieldset>
            <legend>Edit article</legend>
            <p class="field title">
                <input type="text" name="title" id="title" value="{{title}}" placeholder="Arrays">
                <label for="title">Title:</label>
            </p>

            <p class="field category">
                <select name="category" id="category">
                    <option value="{{category}}" selected disabled hidden>{{category}}</option>
                    <option value="JavaScript">JavaScript</option>
                    <option value="CSharp">CSharp</option>
                    <option value="Java">Java</option>
                    <option value="Python">Python</option>
                </select>
                <label for="category">Category:</label>
            </p>
            <p class="field content">
                <textarea name="content" id="content">{{content}}</textarea>
                <label for="content">Content:</label>
            </p>

            <p class="field submit">
                <button class="btn submit" type="submit">Edit</button>
            </p>

        </fieldset>
    </form>
</div>

{{> footer}}