<div class="container" style="height: 90vh;">
    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
        <h1 class="display-3">Welcome ShareTrippers!</h1>
        <p class="lead">SharedTripp is the best way to road across the country. <br> Find yours SharedTripp's
            buddies, when you share with us yours tripp plans and let the exploration begin!</p>
        <a href="/tripp/offer" class="btn btn-primary btn-lg">Offer Tripp!</a>
    </header>

    <!-- Page Features -->
    <div class="row text-center">

        {{#if sharedTripps}}
            {{#each sharedTripps}}
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100">
                        {{> sharedTripp}}
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div style="width: 100%;">
                <img style="max-width: 400px; height: 240px;" src="/static/images/hitchhiker.jpg" />
                <p class="lead" style=" width: 100%; text-align: center; font-size: 22px; font-style: italic;">
                    Hitchhiker time...</p>
            </div>
        {{/if}}
    </div>
    <!-- /.row -->
</div>