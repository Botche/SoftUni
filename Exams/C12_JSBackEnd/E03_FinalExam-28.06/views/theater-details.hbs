<section class="details">
    <h1>Theater title: {{this.title}}</h1>
    <div>
        <img src="{{this.imageUrl}}" alt="{{this.title}}" />
    </div>
</section>

<section class="details">
    <h3>Theater Description</h3>
    <p>{{this.description}}</p>
    <div class="buttons">
        {{#if isCreator}}
            <a class="btn delete" href="/play/delete/{{this._id}}">Delete</a>
            <a class="btn edit" href="/play/edit/{{this._id}}">Edit</a>
        {{else}}
            {{#if isAlreadyLiked}}
                <span class="liked">You have already liked this play!</span>
            {{else}}
                <a class="btn like" href="/play/like/{{this._id}}">Like</a>
            {{/if}}
        {{/if}}
    </div>
</section>