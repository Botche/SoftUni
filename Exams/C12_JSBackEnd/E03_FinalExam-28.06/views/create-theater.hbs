<form class="theater-form" action="/play/create" method="POST">
    <h1>Create Theater</h1>
    <div>
        <label for="playTitle">Theater Title:</label>
        <input type="text" id="playTitle" placeholder="Theater name" name="playTitle" value="{{this.playTitle}}">
    </div>
    <div>
        <label for="description">Theater Description:</label>
        <textarea placeholder="Description" id="description" name="description">{{this.description}}</textarea>
    </div>
    <div>
        <label for="imageUrl">Image url:</label>
        <input type="text" id="imageUrl" placeholder="Image Url" name="imageUrl" value="{{this.imageUrl}}">
    </div>
    <div class="check">
        {{#if isPublic}}
            <input type="checkbox" id="check-box" name="isPublic" checked>
        {{else}}
            <input type="checkbox" id="check-box" name="isPublic">
        {{/if}}
        <label for="check-box">Public</label>
    </div>
    <button class="btn" type="submit">Submit</button>
</form>