<div class="container">
    <h1 class="my-4">Course title : {{this.title}}
    </h1>

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="{{this.imageUrl}}" alt="Express" />
        </div>

        <div class="col-md-4 text-center">
            <h3 class="my-3">Course Description</h3>
            <p>{{this.description}}</p>

            <a href="/course/enroll/{{this._id}}"><button type="button" class="btn btn-info">Enroll</button></a>
        </div>
    </div>

    {{#if isAlreadyIn}}
        <h3 class="text-center">Lectures List</h3>

        <ul class="list-group">

            <li class="list-group-item">
                {{#each lectures}}
                    {{> lecture}}
                {{/each}}
            </li>

